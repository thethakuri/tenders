<!DOCTYPE>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%- include css.ejs %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Tender Portal - Rudra International</title>
</head>

<body ng-app="formValidationApp" ng-controller="FormCtrl">

    <div class="container">
        <div class="row margintop40">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="row">
                    <div class="col-sm-10">
                        <img class="img-responsive paddingbottom20" src="/assets/tender_logo_white.png" alt="Signup">
                    </div>
                </div>
                <div class="row form-signup margintop10">
                    <div class="col-sm-12">
                        
                        <h3 class="page-header nomargintop">Reset Password</h3>
               
                        <form role="form" action="/reset" method="post" name="resetForm" novalidate>
                                    
                                    <!-- Piggyback additional info -->
                                    <input type="text" name="token" class="hidden" value="<%= token %>">
                                    <input type="email" name="email" class="hidden" value="<%= email %>" >
                                    <!-- ------------------------------------- -->
                                    
                                    <div class="form-group" ng-class="{ 'has-error' : resetForm.password.$invalid && !resetForm.password.$pristine }">
                                       <input type="password" name="password" placeholder="New password" class="form-control" id="password" required ng-model="password" ng-minlength="6">
                                    </div>
                                    <p ng-show="resetForm.password.$error.minlength" class="formError text-danger">
	                                    <i class="glyphicon glyphicon-exclamation-sign"></i> Password must contain at least 6 characters</p>
                                    
                                    <div class="form-group" ng-class="{ 'has-error' : resetForm.confirm.$invalid && !resetForm.confirm.$pristine }">
                                       <input type="password" name="confirm" placeholder="Confirm password" class="form-control" id="confirm" required ng-model="confirm" compare-to="password">
                                    </div>
                                    <p ng-show="resetForm.confirm.$invalid && !resetForm.confirm.$pristine" class="formError text-danger">
	                                    <i class="glyphicon glyphicon-exclamation-sign"></i> Both passwords should match</p>
                                        
                                    <div class="form-group">
                                        <button type="submit" class="btn fbtn btn-lg btn-primary marginright5" ng-disabled="resetForm.$invalid">Reset password</button>
                                    </div>
                                    
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>    
        
        
        
       
    <%- include footer.ejs %>
    <%- include scripts.ejs %>
    <script src="/controllers/formcontrol.js"></script>

</body>

</html>