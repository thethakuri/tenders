<!DOCTYPE>
<html ng-app="formValidationApp">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%- include css.ejs %>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Tender Portal - Rudra International</title>

</head>

<body ng-controller="PeekCtrl" ng-init="loggedIn = '<%= loggedIn %>'">
    <!-- navBar  -->
    <nav class="navbar navbar-inverse navbar-static-top ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar3">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="http://tenders.rudra.com.np">
                    <span><img src="/assets/tender_logo_black.png" alt="Tender Portal"></span>
                </a>

            </div>
            <div id="navbar3" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right" >
                    <li><a href="/" >Login</a></li>
                    <li><a href="/signup" >Signup</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
        <!--/.container-fluid -->
    </nav>
    
    <!--Body-->
    <div class="container">
        <div class="row margintop20">
            <div class="col-md-12">
                <h3 class="page-header firstChar"><%= item %></h3>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12 tenderCaller">
                <h4 class="paddingleft15 nomargin"> <%= caller %></h4>
                <i class="glyphicon glyphicon-bullhorn"></i>
            </div>
        </div>
        <div class="row marginleft15">
            <div class="col-md-8 ">
                <span>Published in<a ui-sref="home" class="padding5 nounderline lead" ><%= pubDaily %></a></span><br>
                <span><text class="text-primary">Publication Date</text> : <%= pubDate.toLocaleDateString() %></span><br>
                <span><text class="text-primary lead">Submission Date</text> : <%= subDate.toLocaleDateString() %></span>
            </div>
            <div class="col-md-4">
                <a href="#" class="imgwrapper" data-toggle="modal" data-target="#imgViewer">
                    <img ng-src="<%= img %>" class="img-thumbnail" alt="Tender Clipping" width="200">
                    <span class="glyphicon glyphicon-zoom-in"></span>
                </a>
                <!--Modal Image Viewer-->
                <div class="modal fade" id="imgViewer" tabindex="-1" role="dialog" prevent-backspace>
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header text-left">
                                <span>Published in <%= pubDaily %><br>Publication Date: <%= pubDate.toLocaleDateString() %></span>
                                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                            </div>
                            <div class="modal-body">
                                <img ng-src="<%= img %>"  class="img-responsive" alt="Tender Clipping">
                            </div>
                            <div class="modal-footer">
                                <a type="button" class="btn btn-default" ng-href="<%= img %>"><i class="glyphicon glyphicon-print"></i> Print View</a>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Modal-->
            </div>
        </div>
    </div>
                    
    
    <%- include footer.ejs %>
    <%- include scripts.ejs %>
    <script src="/scripts/angular-ui-router.min.js"></script>
    <script src="/controllers/formcontrol.js"></script>
    

    
</body>

</html>