<!DOCTYPE>
<html ng-app="formValidationApp">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <%- include css.ejs %>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Tender Portal - Rudra International</title>

</head>

<body ng-controller="FormCtrl" ng-init="message = '<%= message %>'; alert = '<%= alert %>'" class="fullBackground">
    <toast></toast>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">
                    <img class="img-responsive" src="/assets/tender_logo_white.png" alt="Login">
                        <form class="form-signin" action="/login" method="post" name="loginForm" novalidate>
                            <div class="form-group">
                                <label class="sr-only" for="email">Email</label>
                                <input type="email" class="form-control" placeholder="Email" name="email" required >
                                <!-- <span class="input-group-addon">@rudra.com.np</span> -->
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="password">Password</label>
                                <input type="password" class="form-control" placeholder="Password" name="password" required >
                            </div>
                            <div class="form-group">
                                <button class="btn fbtn btn-lg  btn-block btn-primary" type="submit" ng-disabled="loginForm.$invalid">Sign in</button>
                            </div>
                            <div class="form-group">
                                <label class="checkbox pull-left">
                                    <input type="checkbox" name="remember" value="true"> Remember me
                                </label>
                                <a href="/forgot" class="pull-right need-help">Forgot password ?</a><span class="clearfix"></span>
                            </div>
                        </form>
                </div>
                <a href="/signup" class="text-center new-account" title="Create new account">Create new account </a>
            </div>
        </div>
        <div class="row text-right hidden-sm hidden-xs text-muted" id="bgannotate">Background picture from <a href="https://flic.kr/s/aHskz3m8mK" target="_blank">Mardi Himal Trek Collection</a></div>
    </div>

    <%- include footer.ejs %>
    <%- include scripts.ejs %>
    <script src="/controllers/formcontrol.js"></script>

    <script src="/scripts/randomBG.js"></script>

</body>

</html>