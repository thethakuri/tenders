<!DOCTYPE>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <%- include css.ejs %>
    
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Tender Portal - Rudra International</title>

</head>

<body ng-app="formValidationApp">

    <div class="container">
        <!-- show any messages that come back with authentication -->

        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                
                <div class="account-wall">
                    <img class="profile-img" src="/assets/tender_logo_white.png" alt="Login">
                    <% if (message.length > 0) { %>
                        <div class="alert <%= alert %> alert-dismissible alertLogin" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <%= message %>
                        </div>
                        <% } %>
                            <form class="form-signin" action="/login" method="post">

                                <div class="input-group form-group">

                                    <input type="text" class="form-control" placeholder="User ID" name="email" required>
                                    <span class="input-group-addon">@rudra.com.np</span>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" placeholder="Password" name="password" required>
                                </div>
                                <button class="btn fbtn btn-lg  btn-block btn-primary" type="submit">Sign in</button>
                                <label class="checkbox pull-left">
                                    <input type="checkbox" value="remember-me"> Remember me
                                </label>
                                <a href="#" class="pull-right need-help">Forgot password ?</a><span class="clearfix"></span>
                            </form>
                </div>
                <a href="/signup" class="text-center new-account">Create an account </a>
            </div>
        </div>
    </div>
    <%- include footer.ejs %>
    <%- include scripts.ejs %>
    <script src="/controllers/formcontrol.js"></script>

</body>

</html>