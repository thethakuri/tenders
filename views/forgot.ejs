<!DOCTYPE>
<html ng-app="formValidationApp">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%- include css.ejs %>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Tender Portal - Rudra International</title>
</head>

<body ng-controller="FormCtrl" ng-init="message = '<%= message %>'; alert = '<%= alert %>'">
    <toast></toast>
    <div class="container">
        <div class="row margintop40">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="row">
                    <div class="col-sm-10">
                        <img class="img-responsive paddingbottom20" src="/assets/tender_logo_white.png" alt="Signup">
                    </div>
                </div>
                <div class="row form-signup margintop10">
                    <div class="col-sm-12">
                        <% if (!message.length || alert!=='info') { %>
                        <h3 class="page-header nomargintop">Forgot Password ?</h3>
                         <% } %>
                        <form role="form" action="/forgot" method="post" name="forgotPassForm" novalidate>
                                     <!--Hack for browser prepopulating form 
                                    <input type="text" class="hidden">
                                    <input type="password" class="hidden">
                                    <!-- ------------------------------------- -->
                                    
                                    <!-- Reset link send success info box -->
                                    <% if (message.length && alert==='info') { %>
                                        <div class="alert alert-info" role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <%= message %>
                                        </div>
                                    <% } %>
                                    
                                    <% if (!message.length || alert!=='info') { %>
                                    <p class="text-muted">Enter the email address associated with your account to recieve password reset link</p>
                                    <div class="form-group">
                                       <input type="email" name="email" placeholder="Email ID" class="form-control" id="email" required ng-model="email">
                                    </div>
                                    
                                    <div class="form-group">
                                        <button type="submit" class="btn fbtn btn-lg btn-primary marginright5" ng-disabled="forgotPassForm.email.$invalid">Send instructions</button>
                                        
                                        <button ng-click="goBack()" type="button" class="btn fbtn btn-lg btn-danger paddingleftright20"><span class="glyphicon glyphicon-share-alt gly-flip-horizontal"></span></button>
                                    </div>
                                    <% } %>
                                    
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>    
        
        
        
       
    <%- include footer.ejs %>
    <%- include scripts.ejs %>
    <script src="/controllers/formcontrol.js"></script>

</body>

</html>